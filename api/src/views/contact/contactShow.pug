extends ../layout

block content
  a(href="/") Back
  h1= contact.firstname + " " + contact.lastname
  h3 Id: 
  p #{contact.id}
  h3 Number: 
  p #{contact.number}
  h3 Email: 
  p #{contact.email}
  a(href="/contact/" + contact.id + "/edit") Edit
  form(id="deleteform" action="/contact/" + contact.id + "/delete", method="post")
    a(href="#" onclick="event.preventDefault(); this.parentNode.submit();") Delete